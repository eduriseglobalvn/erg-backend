                    "raw": "{{baseUrl}}/seo/history/:postId?days=30",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "seo",
                        "history",
                        ":postId"
                    ],
                    "query": [
                        {
                            "key": "days",
                            "value": "30",
                            "description": "Number of days to look back (default: 30)"
