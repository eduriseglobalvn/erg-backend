    "item": [
        {
            "name": "SEO Health",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{baseUrl}}/seo/health",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "seo",
                        "health"
                    ]
                },
                "description": "Get overall SEO health metrics for the website"
            },
            "response": [
                {
                    "name": "Success",
                    "originalRequest": {
                        "method": "GET",
                        "url": "{{baseUrl}}/seo/health"
                    },
                    "status": "OK",
                    "code": 200,
                    "_postman_previewlanguage": "json",
                    "header": [],
                    "body": "{\n  \"totalPosts\": 150,\n  \"postsAbove80\": 45,\n  \"averageSeoScore\": 72,\n  \"postsNeedImprovement\": 105\n}"
                }
            ]
        },
        {
            "name": "Analyze Post",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{baseUrl}}/seo/analyze/:postId",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "seo",
                        "analyze",
                        ":postId"
                    ],
                    "variable": [
                        {
                            "key": "postId",
                            "value": "{{postId}}",
                            "description": "Post UUID"
                        }
                    ]
                },
