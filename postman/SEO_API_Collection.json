                    "raw": "{{baseUrl}}/seo/schema/:postId/validate",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "seo",
                        "schema",
                        ":postId",
                        "validate"
                    ],
                    "variable": [
                        {
                            "key": "postId",
                            "value": "{{postId}}"
                        }
                    ]
                },
                "description": "Validate schema markup for a post"
            },
            "response": [
                {
                    "name": "Valid",
                    "status": "OK",
                    "code": 200,
                    "body": "{\n  \"valid\": true,\n  \"errors\": []\n}"
