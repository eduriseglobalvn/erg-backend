        {
            "name": "Analytics",
            "description": "API thống kê và theo dõi truy cập. FE gọi tracking APIs từ mọi trang, Dashboard API dành cho Admin.",
            "item": [
                {
                    "name": "[Public] Track Visit Start",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{access_token}}",
                                "description": "Optional - Gửi kèm nếu user đã login để track userId",
                                "type": "text"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"url\": \"https://erg.edu.vn/khoa-hoc/ielts-7-0\",\n    \"referrer\": \"https://google.com\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/analytics/visits/start",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "analytics",
                                "visits",
                                "start"
                            ]
                        },
                        "description": "FE gọi khi user vào một trang. Trả về visitId để cập nhật thời gian ở lại sau."
                    }
                },
                {
                    "name": "[Public] Track Event",
                    "request": {
                        "method": "POST",
                        "header": [],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"eventType\": \"button_click\",\n    \"metadata\": {\n        \"buttonId\": \"register-course\",\n        \"courseId\": \"ielts-7-0\"\n    },\n    \"sessionInternalId\": \"session-uuid-from-fe\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/analytics/events",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "analytics",
                                "events"
                            ]
                        },
                        "description": "Track các sự kiện cụ thể như click button, xem video, submit form..."
                    }
                },
                {
                    "name": "[Public] Update Visit Duration",
                    "request": {
                        "method": "PUT",
                        "header": [],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"duration\": 120\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/analytics/visits/{{visit_id}}/end",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "analytics",
                                "visits",
                                "{{visit_id}}",
                                "end"
                            ]
                        },
                        "description": "FE gọi khi user rời trang (beforeunload). Duration tính bằng giây."
                    }
                },
                {
                    "name": "[Admin] Dashboard Stats",
                    "request": {
                        "auth": {
                            "type": "bearer",
                            "bearer": [
                                {
                                    "key": "token",
                                    "value": "{{access_token}}",
                                    "type": "string"
                                }
                            ]
                        },
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/analytics/dashboard?from=2026-01-15&to=2026-01-22",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "analytics",
                                "dashboard"
                            ],
                            "query": [
                                {
                                    "key": "from",
                                    "value": "2026-01-15",
                                    "description": "Ngày bắt đầu (YYYY-MM-DD). Default: 7 ngày trước."
                                },
                                {
                                    "key": "to",
                                    "value": "2026-01-22",
                                    "description": "Ngày kết thúc (YYYY-MM-DD). Default: Hôm nay."
                                }
                            ]
                        },
                        "description": "API tổng hợp cho Dashboard. Trả về: summary (với % tăng trưởng), trafficChart (Mobile/Desktop), locations, devices, content, peakHours, trafficSources. Yêu cầu quyền 'system.logs'."
                    }
                }
            ]
        }
